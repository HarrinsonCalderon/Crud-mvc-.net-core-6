@using crudMvcCore6.Models.ViewModels
@model BeerViewModel

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success">
        @TempData["mensaje"]
    </div>

}


<h1>Editar cerveza</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            @Html.HiddenFor(m=>m.Beerld)
            <div asp-validation-summary="ModelOnly" class="text-danger">  </div>

            <div class="form-group">
                <label asp-for="NameBeer" class="control-label"></label>
                <input asp-for="NameBeer" class="form-control" />
                <span asp-validation-for="NameBeer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FkBrandld" class="control-label"></label>
                <select asp-for="FkBrandld" class="form-control" asp-items="ViewBag.Brands"> </select>
                <span asp-validation-for="FkBrandld" class="text-danger"></span>
            </div>

            <div>
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
